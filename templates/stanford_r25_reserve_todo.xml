<!--
When a tentative reservation is made that requires confirmation,
this XML snippet is added to the reservation request for each member of the
room's approval security group with the appropriate bracketed tags replaced
by reservation info and the approver's 25Live id.
-->
<r25:todo id="" status="new">
  <r25:cur_todo_state>1</r25:cur_todo_state>
  <r25:todo_name>Reservation needs approval</r25:todo_name>
  <r25:todo_type>2</r25:todo_type>
  <r25:todo_priority_id>10</r25:todo_priority_id>
  <r25:due_dt>[r25_start_date_time]</r25:due_dt>
  <r25:object_type>1</r25:object_type>
  <r25:read>T</r25:read>
  <r25:cur_assigned_to_id>[r25_approver_id]</r25:cur_assigned_to_id> 
  <r25:cur_assigned_by_id>[r25_credential_id]</r25:cur_assigned_by_id> 
</r25:todo>
